<Page x:Class="RAIAPP.Views.Pages.pGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RAIAPP.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход от имени гостя"
      Loaded="Page_Loaded">

    <Grid>
        <DataGrid AutoGenerateColumns="false" CanUserAddRows="False" x:Name="dgCosts">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Cost}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
